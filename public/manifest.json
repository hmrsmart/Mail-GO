{
  "id": "/",
  "scope": "/",
  "name": "MailGO",
  "display": "standalone",
  "start_url": "/",
  "short_name": "MailGO",
  "theme_color": "#474ad2",
  "description": "MailGO is a simple and fast Outlook client for all your devices.",
  "orientation": "any",
  "background_color": "#474ad2",
  "related_applications": [],
  "prefer_related_applications": false,
  "display_override": [
    "window-controls-overlay"
  ],
  "icons": [
    {
      "src": "assets/icons/512.png",
      "sizes": "512x512",
      "type": "image/png"
    },
    {
      "src": "assets/icons/192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "assets/icons/48.png",
      "sizes": "48x48",
      "type": "image/png"
    },
    {
      "src": "assets/icons/96.png",
      "sizes": "96x96",
      "type": "image/png"
    }
  ],
  "screenshots": [
    {
      "src": "assets/screenshots/untitled.png",
      "type": "image/png"
    },
    {
      "src": "assets/screenshots/screen.png",
      "type": "image/png"
    }
  ],
  "features": [
    "Cross Platform",
    "fast",
    "simple"
  ],
  "categories": [
    "utility"
  ],
  "shortcuts": [
    {
      "name": "New Email",
      "short_name": "New",
      "description": "Create a new email",
      "url": "/newEmail",
      "icons": [
        {
          "src": "assets/icons/96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Contacts Book",
      "short_name": "Contacts",
      "description": "Manage my contacts",
      "url": "/contacts",
      "icons": [
        {
          "src": "assets/icons/96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "mailto",
      "url": "/newEmail?url=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/newEmail",
      "accept": {
        "image/*": [
          ".png",
          ".jpg"
        ],
        "text/*": [
          ".txt"
        ]
      }
    }
  ],
  "share_target": {
    "action": "/attach/file/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "name",
      "text": "description",
      "files": [
        {
          "name": "file",
          "accept": [
            "image/jpeg",
            ".png",
            ".jpg",
            ".txt"
          ]
        }
      ]
    }
  },
  "widgets": []
}